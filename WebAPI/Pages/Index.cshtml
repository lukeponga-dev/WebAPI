@page
@model IndexModel
@{
    ViewData["Title"] = "Vehicles CRUD API";
}
<p class="text-center" id="counter"></p>
<hr />

<div class="container">
    <div class="table-title">
        <div class="row">
            <div class="col">
                <h2>Vehicle Inventory</h2>
            </div>
            <div class="col">
                <a href="#AddVehicleModal" class="btn btn-success" data-toggle="modal">
                    <i class="material-icons">&#xE147;</i> <span>Add New Vehicle</span>
                </a>
            </div>          
        </div>

        </div>
    <table class="table table-responsive-md table-bordered table-striped">
        <thead class="thead-light">
            <tr>
                        <div class="input-group">
                            <input type="text" id="search" class="form-control-sm" placeholder="Search by Regastration">
                            <span class="input-group-addon"><i class="material-icons">&#xE8B6;</i></span>
                        </div>
                <th>Reg</th>
                <th>Make</th>
                <th>Model</th>
                <th>Colour</th>
                <th>Year</th>
                <th></th>
                <th></th>
</thead>
        </tr>

        <tbody id="allVehicles"></tbody>
    </table>


    <div id="AddVehicleModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="my-form" action="javascript:void(0);" method="POST" onsubmit="addItem()">
                    <div class="modal-header">
                        <h3 class="modal-title">Add Vehicle</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input class="form-control" type="text" id="add-reg" placeholder="Add Reg" />
                        <br />
                        <input class="form-control" type="text" id="add-make" placeholder="Add Make" />
                        <br />
                        <input class="form-control" type="text" id="add-model" placeholder="Add Model" />
                        <br />
                        <input class="form-control" type="text" id="add-colour" placeholder="Add Colour" />
                        <br />
                        <input class="form-control" type="number" id="add-year" placeholder="Add Year" />
                    </div>
                    <div class="form-group" id="result"></div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-info" value="Add">
                        <input type="button" class="btn btn-danger" data-dismiss="modal" value="Cancel">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
    <!---Edit Modal html -->
    <div id="editVehicleModal" class="modal fade">
        <div class="modal-dialog">
            <div class="modal-content">
                <form class="my-form">
                    <div class="modal-header">
                        <h3 class="modal-title">Edit Vehicle</h3>
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" id="edit-id">
                        <input class="form-control" type="text" id="edit-reg" />
                        <br />
                        <input class="form-control" type="text" id="edit-make" />
                        <br />
                        <input class="form-control" type="text" id="edit-model" />
                        <br />
                        <input class="form-control" type="text" id="edit-colour" />
                        <br />
                        <input class="form-control" type="number" id="edit-year" />
                    </div>
                    <div class="form-group" id="resultUpdate"></div>
                    <div class="modal-footer">
                        <input type="submit" class="btn btn-info" value="Save">
                        <input type="button" class="btn btn-danger" data-dismiss="modal" value="Cancel">
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {

    <script>
        //run the LoadTable function when the page has loaded
        $(document).ready(function () {
            LoadTable();
        });
    </script>
}