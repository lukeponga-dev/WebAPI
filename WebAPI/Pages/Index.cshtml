@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<p></p>
<div class="text-center">
    <div id="services">
        <p></p>
        <div class="container">
            <p></p>
            <hr />
            <h1>Vehicle CRUD</h1>
            <div class="row">
                <div class="col-md-2, col-lg-3">
                    <h3>Add Vehicle</h3>
                    <form action="javascript:void(0);" method="POST" onsubmit="addItem()">
                        <input class="form-control" type="text" id="add-reg" placeholder="Add Reg" />
                        <input class="form-control" type="text" id="add-make" placeholder="Add Make" />
                        <input class="form-control" type="text" id="add-model" placeholder="Add Model" />
                        <input class="form-control" type="text" id="add-colour" placeholder="Add Colour" />
                        <input class="form-control" type="text" id="add-year" placeholder="Add Year" />
                        <input type="submit" value="Add">
                    </form>
                    <h3>Edit Vehicle</h3>
                    <form class="my-form">
                        <input type="hidden" id="edit-id">
                        <input class="form-control" type="text" id="edit-reg" />
                        <input class="form-control" type="text" id="edit-make" />
                        <input class="form-control" type="text" id="edit-model" />
                        <input class="form-control" type="text" id="edit-colour" />
                        <input class="form-control" type="text" id="edit-year" />
                        <input type="submit" value="Save">
                    </form>
                </div>
                <div class="col-md-2, col-lg-3">
                    <p id="counter"> </p>
                    <table class="table table-striped table-hover">
                        <tr>
                            <th>Reg</th>
                            <th>Make</th>
                            <th>Model</th>
                            <th>Colour</th>
                            <th>Year</th>
                            <th></th>
                            <th></th>
                        </tr>
                        <tbody id="allStaff"></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script type="text/javascript">
        //run the LoadTable function when the page has loaded
        $(document).ready(function() {
            LoadTable();
        });
    </script>
}
